<Window x:Class="BloodDonationSystem_Wpf.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BloodDonationSystem_Wpf"
        mc:Ignorable="d"
        Title="Login Window" Height="400" Width="600" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Login" HorizontalAlignment="Left" Margin="38,28,0,0" VerticalAlignment="Top" FontFamily="Tahoma" Foreground="#FF2E7D32"/>
        <Label Content="Email:" HorizontalAlignment="Left" Margin="38,73,0,0" VerticalAlignment="Top" FontFamily="Tahoma" Foreground="#FF2E7D32"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="38,118,0,0" VerticalAlignment="Top" FontFamily="Tahoma" Foreground="#FF2E7D32"/>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Margin="173,78,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="341" Height="30" Background="#FFECF9EC"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="173,123,0,0" VerticalAlignment="Top" Width="341" Height="30" Background="#FFECF9EC"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="278,180,0,0" VerticalAlignment="Top" Padding="15,8" Background="#FF388E3C" Foreground="White" Click="btnLogin_Click" FontWeight="Bold"/>
        <Button x:Name="btnRegister" Content="Register" HorizontalAlignment="Left" Margin="400,180,0,0" VerticalAlignment="Top" Padding="15,8" Background="#FF1976D2" Foreground="White" Click="btnRegister_Click" FontWeight="Bold"/>

    </Grid>

</Window>
